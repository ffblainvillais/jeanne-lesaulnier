{% extends 'layout/layout' %}

{% block content %}

    <div class="title text-centered">
        <h1>Connexion</h1>
    </div>

    <form action="{{ url('zfcuser/login') }}" method="post" class="form-container text-lato">
        <label><b>Utilisateur</b></label>
        <input type="text" placeholder="Entrer l'utilisateur" name="identity" required>

        <label><b>Mot de passe</b></label>
        <input type="password" placeholder="Entrer le mot de passe" name="credential" required>

        <input type="submit">
    </form>

{% endblock %}