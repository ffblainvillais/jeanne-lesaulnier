<section class="page-container container-grey"  id="creation">
    <h2>Mes realisations</h2>
    <hr/>
    <ul class="creation-container">
        {% for creation in creations %}
            <li class="creation text-vertical-center">
                <a href="{{ url('detail-creation-page', {'creationId' : creation.id}) }}"><img src="{{ creation().getImagePath(creation.image) }}" alt="{{ creation.title }}" class="creation-image"></a>
                {% if zfcUserIdentity() %}
                    <a href="{{ url('remove-creation', {'creationId' : creation.id }) }}"><span class="glyphicon glyphicon-remove-circle"></span></a>
                {% endif %}
            </li>
        {% endfor %}

        {% if zfcUserIdentity() %}
            <li class="creation text-vertical-center js-creation__add" data-url="{{ url('add-creation-page') }}"><a href="{{ url('add-creation-page') }}"><span class="glyphicon glyphicon-plus remove-creation"></span></a></li>
        {% endif %}
    </ul>
</section>